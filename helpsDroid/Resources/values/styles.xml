<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
  
  <style name="AppBaseTheme" parent="android:Theme.Material.Light">
      
  </style>

  <style name="AppTheme" parent="AppBaseTheme">
    
  </style>


  <style name="LightDialog" parent="android:Theme.Material.Light.Dialog">
  </style>


  <style name="AppTheme.MyToolbar" parent="android:Theme.Material.Light.DarkActionBar">
    <item name="android:windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="android:windowActionBar">false</item>
    <item name="android:windowTranslucentStatus">true</item>
  </style>

  <style name="AppTheme.SignIn" parent="android:Theme.Material">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowTranslucentStatus">true</item>
  </style>
  
  <style name="whiteEditText" parent="android:Widget.EditText">
    <item name="android:textColor">#fff</item>
    <item name="android:textSize">16dp</item>
    <item name="android:textColorHint">#aaffffff</item>
  </style>

  <style name="standardEditText" parent="android:Widget.EditText">
    <item name="android:textColor">#1d1d26</item>
    <item name="android:textSize">13dp</item>
    <item name="android:textColorHint">#a8a8aa</item>
  </style>
 
</resources>